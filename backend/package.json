{
  "name": "meants-backend",
  "version": "1.0.0",
  "description": "MEANTS backend written in Typescript",
  "main": "index.js",
  "scripts": {
    "update:packages": "ncu -u && ncu -a && npm update",
    "check": "npm-check --skip-unused",
    "preinstall": "npm i -g nodemon node-inspector rimraf npm-run-all npm-check",
    "start": "npm-run-all -s clean build start:simple",
    "start:simple": "node .",
    "start:dev": "npm-run-all -s clean build -p watch:*",
    "start:debug": "npm-run-all -s clean build -p watch:* debug",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "debug": "node-debug",
    "build": "npm-run-all -s build:ts build:swagger",
    "build:ts": "tsc",
    "build:swagger": "node ./dist/tasks/swagger.js",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon --debug --delay 2.5",
    "lint": "tslint ./src/{,**/}*.ts",
    "pretest": "npm-run-all -s clean build",
    "test": "npm-run-all -s test:cov test:cov:remap",
    "test:api": "mocha dist/tests/api/*.spec.js -R spec --bail",
    "test:unit": "mocha dist/tests/unit/*.spec.js -R spec --bail",
    "test:cov": "istanbul cover node_modules/mocha/bin/_mocha -- dist/**/*.spec.js -R spec --bail",
    "test:cov:remap": "npm-run-all test:cov:remap:*",
    "test:cov:remap:html": "remap-istanbul -i coverage/coverage.json -o coverage/lcov-report -t html",
    "test:cov:remap:loc": "remap-istanbul -i coverage/coverage.json -o coverage/lcov.info -t lcovonly"
  },
  "keywords": [
    "MongoDB",
    "Express",
    "Nodejs",
    "Typescript",
    "REST"
  ],
  "author": "ian.raffin@gmail.com",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.1",
    "class-validator": "^0.7.0",
    "compression": "^1.6.2",
    "config": "^1.25.1",
    "cors": "^2.8.3",
    "es6-shim": "^0.35.3",
    "express": "^4.15.2",
    "express-ping": "^1.4.0",
    "express-winston": "^2.3.0",
    "glob": "^7.1.1",
    "iso-3166-country-list": "^0.1.2",
    "js-yaml": "^3.8.3",
    "jsonwebtoken": "^7.3.0",
    "mongodb": "^2.2.25",
    "multer": "^1.3.0",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.6.12",
    "source-map-support": "^0.4.14",
    "swagger-client": "^3.0.5",
    "swagger-jsdoc": "^1.9.2",
    "swagger-tools": "^0.10.1",
    "ts-node": "^3.0.2",
    "typedi": "^0.4.3",
    "underscore": "^1.8.3",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.3",
    "@types/compression": "0.0.33",
    "@types/config": "0.0.32",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/glob": "^5.0.30",
    "@types/js-yaml": "^3.5.29",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/mongodb": "^2.1.43",
    "@types/multer": "0.0.33",
    "@types/node": "^7.0.12",
    "@types/passport": "^0.3.3",
    "@types/passport-facebook": "^2.1.3",
    "@types/passport-jwt": "^2.0.19",
    "@types/passport-local": "^1.0.29",
    "@types/reflect-metadata": "0.0.5",
    "@types/underscore": "^1.8.0",
    "@types/winston": "^2.3.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.1",
    "codelyzer": "^2.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.1",
    "ts-helpers": "^1.1.2",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  }
}
